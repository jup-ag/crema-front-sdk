{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "types"],
    "moduleResolution": "node"
  },
  "include": ["src", "types"]
}
